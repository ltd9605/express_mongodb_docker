<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Management Software</title>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1> Apollonia Dental Practice</h1>
            <h4>Employee Management Software</h4>
            <div class="actions">
                <button class="btn btn-primary" onclick="window.location.href='/add'">Add Employee</button>
                <button class="btn btn-secondary">Logout</button>
            </div>
        </div>
        <table border="1">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (employees && employees.length> 0) { %>
                    <% employees.forEach((employee, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= employee.firstName %>
                            </td>
                            <td>
                                <%= employee.lastName %>
                            </td>
                            <td>
                                <%= employee.departmentId ? employee.departmentId.name : 'N/A' %>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="action-btn edit"
                                        onclick="window.location.href='/update/<%= employee._id %>'">Edit</button>
                                    <button class="action-btn delete"
                                        onclick="window.location.href='/delete/<%= employee._id %>'">Delete</button>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" style="text-align: center; padding: 20px;">No employees found.</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>